{
    "compilerOptions": {
      "module": "ESNext",
      "strict": true,
      "esModuleInterop": true,
      "target": "ES2022",
      "outDir": "./dist",
      "moduleResolution": "node"
    },
    "scripts": {
        "start": "ts-node app.ts"
      },
    "include": ["**/*.ts"],
    "exclude": ["node_modules", "**/*.spec.ts"],
    "ts-node": {
        "esm": true,
        "experimentalSpecifierResolution": "node"
  }
}